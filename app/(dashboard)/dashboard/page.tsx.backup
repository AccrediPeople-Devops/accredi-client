"use client";

import React, { useState, useEffect, useMemo, useCallback } from "react";
import Link from "next/link";
import Image from "next/image";
import axios from "axios";
import config from "@/app/components/config/config";
import { LoadingSpinner } from "@/app/components/LoadingSpinner";

// Define types for the dashboard data
interface CourseStats {
  total: number;
  active: number;
}

interface CategoryStats {
  total: number;
  active: number;
}

interface Stats {
  total: number;
}

interface DashboardData {
  totalUsers: number;
  customers: number;
  courses: CourseStats;
  reviews: Stats;
  courseCategories: CategoryStats;
  schedules: Stats;
  questionPapers: Stats;
  exams: Stats;
}

// Define type for course
interface CourseImage {
  url?: string;
  key?: string;
}

interface CourseUpload {
  courseImage?: CourseImage[];
}

interface Course {
  _id: string;
  title: string;
  categoryId: string;
  upload?: CourseUpload;
  createdAt?: string;
  enrolled?: number;
}

// Simple placeholder image generator
const generatePlaceholder = (text: string): string => {
  return `https://placehold.co/400x200/4F46E5/FFFFFF?text=${encodeURIComponent(text)}`;
};

export default function Dashboard() {
  const [dashboardData, setDashboardData] = useState<DashboardData | null>(null);
  const [courses, setCourses] = useState<Course[]>([]);
  const [isLoading, setIsLoading] = useState(true);
  const [isCoursesLoading, setIsCoursesLoading] = useState(true);
  const [error, setError] = useState("");

  useEffect(() => {
    // Fetch both dashboard data and courses in parallel for better performance
    const fetchDashboardData = async () => {
      setIsLoading(true);
      setIsCoursesLoading(true);
      
      try {
        const token = localStorage.getItem("token");
        const headers = { Authorization: `Bearer ${token}` };
        
        // Fetch both API endpoints in parallel
        const [dashboardResponse, coursesResponse] = await Promise.all([
          axios.get(`${config.apiUrl}/dashboard/v1`, { headers }),
          axios.get(`${config.apiUrl}/courses/v1`, { headers })
        ]);

        // Process dashboard data
        if (dashboardResponse.data && dashboardResponse.data.dashboard) {
          setDashboardData(dashboardResponse.data.dashboard);
        }

        // Process courses data
        if (coursesResponse.data && coursesResponse.data.courses && Array.isArray(coursesResponse.data.courses)) {
          // Sort by creation date and take the most recent 4
          const sortedCourses = [...coursesResponse.data.courses].sort((a: Course, b: Course) => {
            const dateA = new Date(a.createdAt || "0").getTime();
            const dateB = new Date(b.createdAt || "0").getTime();
            return dateB - dateA;
          }).slice(0, 4);
          
          setCourses(sortedCourses);
        }
      } catch (err) {
        setError("Failed to load dashboard data");
      } finally {
        setIsLoading(false);
        setIsCoursesLoading(false);
      }
    };

    fetchDashboardData();
  }, []);

  // Function to get image URL for a course - memoized for performance
  const getCourseImageUrl = useCallback((course: Course): string => {
    if (course.upload?.courseImage?.[0]?.url) {
      return course.upload.courseImage[0].url;
    } else if (course.upload?.courseImage?.[0]?.key) {
      return `${config.imageUrl}${course.upload.courseImage[0].key}`;
    }
    return generatePlaceholder(course.title || "Course");
  }, []);

  // Function to render stats cards - memoized for performance
  const renderStatsCards = useMemo(() => {
    if (!dashboardData) return null;
    
    const stats = [
      {
        title: "Total Users",
        value: dashboardData.totalUsers || 0,
        icon: (
          <svg xmlns="http://www.w3.org/2000/svg" className="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
          </svg>
        ),
      },
      {
        title: "Active Courses",
        value: dashboardData.courses?.active || 0,
        icon: (
          <svg xmlns="http://www.w3.org/2000/svg" className="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
          </svg>
        ),
      },
      {
        title: "Course Categories",
        value: dashboardData.courseCategories?.total || 0,
        icon: (
          <svg xmlns="http://www.w3.org/2000/svg" className="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
            <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
          </svg>
        ),
      },
      {
        title: "Exams",
        value: dashboardData.exams?.total || 0,
        icon: (
          <svg xmlns="http://www.w3.org/2000/svg" className="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
            <path fillRule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clipRule="evenodd" />
          </svg>
        ),
      },
    ];

    return (
      <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {stats.map((stat, index) => (
          <div
            key={index}
            className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-4 flex items-center space-x-4 border border-[var(--border)]"
          >
            <div className="p-3 rounded-[var(--radius-md)] bg-[var(--primary)]/10 text-[var(--primary)]">
              {stat.icon}
            </div>
            <div>
              <p className="text-sm text-[var(--foreground-muted)]">{stat.title}</p>
              <p className="text-2xl font-bold text-[var(--foreground)]">{stat.value}</p>
            </div>
          </div>
        ))}
      </div>
    );
  };

  // Function to render detailed stats - memoized for performance
  const renderDetailedStats = useMemo(() => {
    if (!dashboardData) return null;
    
    return (
      <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mt-6">
        <div className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-4 border border-[var(--border)]">
          <h3 className="text-lg font-medium text-[var(--foreground)] mb-3">Course Statistics</h3>
          <div className="space-y-2">
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Total Courses:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.courses?.total || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Active Courses:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.courses?.active || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Active Categories:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.courseCategories?.active || 0}</span>
            </div>
          </div>
        </div>

        <div className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-4 border border-[var(--border)]">
          <h3 className="text-lg font-medium text-[var(--foreground)] mb-3">User Statistics</h3>
          <div className="space-y-2">
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Total Users:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.totalUsers || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Customers:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.customers || 0}</span>
            </div>
          </div>
        </div>

        <div className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-4 border border-[var(--border)]">
          <h3 className="text-lg font-medium text-[var(--foreground)] mb-3">Platform Activity</h3>
          <div className="space-y-2">
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Reviews:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.reviews?.total || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Schedules:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.schedules?.total || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Question Papers:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.questionPapers?.total || 0}</span>
            </div>
          </div>
        </div>
      </div>
    );
  };

  // Function to render detailed stats - memoized for performance
  const renderDetailedStats = useMemo(() => {
    if (!dashboardData) return null;
    
    return (
      <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mt-6">
        <div className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-4 border border-[var(--border)]">
          <h3 className="text-lg font-medium text-[var(--foreground)] mb-3">Course Statistics</h3>
          <div className="space-y-2">
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Total Courses:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.courses?.total || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Active Courses:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.courses?.active || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Total Categories:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.courseCategories?.total || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Active Categories:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.courseCategories?.active || 0}</span>
            </div>
          </div>
        </div>

        <div className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-4 border border-[var(--border)]">
          <h3 className="text-lg font-medium text-[var(--foreground)] mb-3">User Statistics</h3>
          <div className="space-y-2">
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Total Users:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.totalUsers || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Customers:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.customers || 0}</span>
            </div>
          </div>
        </div>

        <div className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-4 border border-[var(--border)]">
          <h3 className="text-lg font-medium text-[var(--foreground)] mb-3">Platform Activity</h3>
          <div className="space-y-2">
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Reviews:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.reviews?.total || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Schedules:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.schedules?.total || 0}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-[var(--foreground-muted)]">Question Papers:</span>
              <span className="font-medium text-[var(--foreground)]">{dashboardData.questionPapers?.total || 0}</span>
            </div>
          </div>
        </div>
      </div>
    );
  }, [dashboardData]);

  // Function to render latest courses - memoized for performance
  const renderLatestCourses = useMemo(() => {
    if (isCoursesLoading) {
      return (
        <div className="flex justify-center py-12">
          <LoadingSpinner />
        </div>
      );
    }

    if (!courses || courses.length === 0) {
      return (
        <div className="text-center py-12 text-[var(--foreground-muted)]">
          No courses available yet. Click "Add Course" to create your first course.
        </div>
      );
    }

    return (
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {courses.map((course) => (
          <div
            key={course._id}
            className="bg-[var(--input-bg)] rounded-[var(--radius-lg)] overflow-hidden transition-all hover:shadow-md hover:translate-y-[-2px] border border-[var(--border)]"
          >
            <div className="relative h-40 w-full">
              <Image
                src={getCourseImageUrl(course)}
                alt={course.title || "Course"}
                fill
                style={{ objectFit: "cover" }}
              />
            </div>
            <div className="p-4">
              <div className="inline-block px-2 py-1 text-xs font-medium bg-[var(--primary)]/10 text-[var(--primary)] rounded-[var(--radius-sm)] mb-2">
                {course.categoryId || "Unknown Category"}
              </div>
              <h3 className="text-[var(--foreground)] font-medium mb-2 line-clamp-2">
                {course.title || "Untitled Course"}
              </h3>
              <div className="flex items-center text-sm text-[var(--foreground-muted)]">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  className="h-4 w-4 mr-1"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                </svg>
                {course.enrolled || 0} students
              </div>
            </div>
          </div>
        ))}
      </div>
    );
  }, [isCoursesLoading, courses, getCourseImageUrl]);

  return (
    <div className="space-y-6">
      {/* Welcome section */}
      <div className="flex justify-between items-start">
        <div>
          <h1 className="text-2xl font-bold text-[var(--foreground)]">
            Welcome to AccrediPeople Certifications
          </h1>
          <p className="text-[var(--foreground-muted)]">
            Your dashboard gives you an overview of your learning platform.
          </p>
        </div>
        <div className="flex space-x-2">
          <Link
            href="/dashboard/courses/add"
            className="px-4 py-2 bg-[var(--primary)] text-white rounded-[var(--radius-md)] flex items-center gap-2 hover:bg-[var(--primary-hover)] transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fillRule="evenodd"
                d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                clipRule="evenodd"
              />
            </svg>
            Add Course
          </Link>
        </div>
      </div>

      {/* Stats section */}
      {isLoading ? (
        <div className="flex justify-center py-12">
          <LoadingSpinner />
        </div>
      ) : error ? (
        <div className="text-red-500 bg-red-50 p-4 rounded-lg">
          {error}
        </div>
      ) : (
        <>
          {renderStatsCards}
          {renderDetailedStats}
        </>
      )}

      {/* Latest courses section */}
      {/* <div className="mt-8">
        <div className="flex justify-between items-center mb-4">
          <h2 className="text-xl font-medium text-[var(--foreground)]">Latest Courses</h2>
          <Link
            href="/dashboard/courses"
            className="text-sm font-medium text-[var(--primary)] hover:text-[var(--primary-hover)] transition-colors flex items-center"
          >
            View All
            <svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-5 w-5 ml-1"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fillRule="evenodd"
                d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                clipRule="evenodd"
              />
            </svg>
          </Link>
        </div>

        {renderLatestCourses}
      </div> */}

      {/* Quick actions section */}
      <div className="mt-8 bg-[var(--input-bg)] rounded-[var(--radius-lg)] p-6 border border-[var(--border)]">
        <h2 className="text-xl font-medium text-[var(--foreground)] mb-4">Quick Actions</h2>
        <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <Link
            href="/dashboard/courses"
            className="p-4 bg-[var(--background)] rounded-[var(--radius-md)] border border-[var(--border)] flex flex-col items-center justify-center text-center hover:border-[var(--primary)] transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-10 w-10 text-[var(--primary)] mb-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
            </svg>
            <span className="text-[var(--foreground)] font-medium">Manage Courses</span>
          </Link>
          <Link
            href="/dashboard/curriculum"
            className="p-4 bg-[var(--background)] rounded-[var(--radius-md)] border border-[var(--border)] flex flex-col items-center justify-center text-center hover:border-[var(--primary)] transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-10 w-10 text-[var(--primary)] mb-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
            </svg>
            <span className="text-[var(--foreground)] font-medium">Curriculum</span>
          </Link>
          <Link
            href="/dashboard/users"
            className="p-4 bg-[var(--background)] rounded-[var(--radius-md)] border border-[var(--border)] flex flex-col items-center justify-center text-center hover:border-[var(--primary)] transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-10 w-10 text-[var(--primary)] mb-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
            </svg>
            <span className="text-[var(--foreground)] font-medium">Users</span>
          </Link>
          <Link
            href="/dashboard/exams"
            className="p-4 bg-[var(--background)] rounded-[var(--radius-md)] border border-[var(--border)] flex flex-col items-center justify-center text-center hover:border-[var(--primary)] transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-10 w-10 text-[var(--primary)] mb-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fillRule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clipRule="evenodd" />
            </svg>
            <span className="text-[var(--foreground)] font-medium">Exams</span>
          </Link>
        </div>
      </div>
    </div>
  );
}
